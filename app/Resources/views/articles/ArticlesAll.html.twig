{%  extends "base.html.twig" %}
{%  block body %}
    <div class="container" id="categories">
        <div class="row">
            {% for category in categories %}
                <form class="col-lg-4" action="{{ path('articles_category', {'id': category.id}) }}">
                    <button class="categ_btn btn btn-danger">{{ category.name }}</button>
                </form>
            {% endfor %}
        </div>
    </div>
    {% for article in articles %}
        <h1 class="">{{ article.title }}</h1>
        <h4 class="">{{ article.body }}</h4>
        <p class="">Date: {{ article.date | date("d.m.Y")}}</p>
        <form action="{{ path('article_id', {'id': article.id}) }}">
            <button class="btn btn-danger">Покажи</button>
        </form>
        <p>--------------------------------------------------------------------------------------------------------------</p>
    {% endfor %}
{% endblock %}